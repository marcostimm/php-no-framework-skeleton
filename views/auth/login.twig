{% extends 'templates/app.twig' %}

{% block content %}
    <div class="row justify-content-center">
        <div class="col-6">
            <form action="/auth/sigin" method="POST">
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="text" name="email" id="email" class="form-control {{ errors.email ? ' is-invalid' : '' }}" />

                    {% if errors.email %}
                        <div class="invalid-feedback">
                            {{ errors.email | first }}
                        </div>
                    {% endif %}
                </div>
                <div class="form-group">
                    <label for="email">Password</label>
                    <input type="password" name="password" id="password" class="form-control {{ errors.password ? ' is-invalid' : '' }}" />

                    {% if errors.password %}
                        <div class="invalid-feedback">
                            {{ errors.password | first }}
                        </div>
                    {% endif %}
                </div>

                <div class="form-check">
                    <label for="remember" class="form-check-labek">
                        <input type="checkbox" name="remember" id="remember" class="form-check-input">
                        Remember me
                    </label>
                </div>

                <button class="btn btn-primary">Sig in</button>
            </form>
        </div>
    </div>
{% endblock %}